num_layer {
    label = "Num";
    bindings = <
 &kp GRAVE   &kp EXCL  &kp N1     &kp AT      &kp N2         &kp HASH       &kp N3           &kp DLLR       &kp N4      &kp PRCNT  &kp N5        &kp DEL
 &kp CAPS    &kp F1    &kp F2     &kp F3      &kp F4         &kp F5         &kp F6           &kp MINUS      &kp PLUS    &kp EQUAL  &kp LBKT      &kp RBKT
 &kp TILDE   &kp F7    &kp F8     &kp F9      &kp F10        &kp F11        &kp F12          &kp HASH       &kp PIPE    &kp BSLH   &kp PG_UP &   kp PG_DN
 &trans      &trans    &trans     &trans      &mo MEDIA_L            &trans                  &trans         &kp C_NEXT  &kp C_VOL_DN &kp C_VOL_UP &kp C_PLAY
    >;
};
