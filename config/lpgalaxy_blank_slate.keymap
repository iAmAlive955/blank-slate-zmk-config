//           --------------------------- NEW SYM ---------------------------
sym_layer {
    label = "Sym";
    bindings = <
 &kp TILDE  &kp EXCL   &kp AT     &kp HASH    &kp DLLR       &kp PRCNT      &kp CARET        &kp AMPS       &kp STAR    &kp LPAR   &kp RPAR      &kp DEL
 &kp CAPS   &trans     &kp F1     &kp F2      &kp F3         &kp F4         &kp F5           &kp F6         &kp MINUS   &kp PLUS   &kp LBKT      &kp RBKT
 &trans     &kp F7     &kp F8     &kp F9      &kp F10        &kp F11        &kp F12          &trans         &trans      &trans     &trans        &trans
 &trans     &trans     &trans     &trans      &trans                &trans                   &mo MEDIA_L    &kp C_NEXT  &kp C_VOL_DN &kp C_VOL_UP &kp C_PLAY
    >;
};
//           --------------------------- NEW MEDIA ---------------------------
media_layer {
    label = "Media";
    bindings = <
 &trans     &trans     &trans     &trans      &trans         &trans         &trans           &trans         &trans      &trans     &trans        &trans
 &trans     &trans     &trans     &trans      &trans         &trans         &trans           &trans         &trans      &trans     &trans        &trans
 &trans     &trans     &trans     &trans      &trans         &trans         &trans           &trans         &trans      &trans     &trans        &trans
 &trans     &trans     &trans     &trans      &trans                 &trans                  &trans         &kp C_NEXT  &kp C_VOL_DN &kp C_VOL_UP &kp C_PLAY
    >;
};
//           --------------------------- NEW ADJUST ---------------------------
adjust_layer {
    label = "Adjust";
    bindings = <
&trans     &trans     &trans     &trans      &kp TAB        &kp N7          &kp N8          &kp N9          &kp KP_MINUS      &kp KP_DEVIDE       &trans        &trans
&trans     &kp LEFT   &kp DOWN   &kp UP      &kp RIGHT      &kp N4          &kp N5          &kp N6          &kp KP_PLUS       &kp KP_MULTIPLY     &trans        &trans
&trans     &trans     &trans     &trans      &trans         &kp N1          &kp N2          &kp N3          &kp EQUAL         &kp ENTER           &trans        &trans
&trans     &trans     &trans     &trans      &trans                 &kp N0                  &kp DOT         &trans            &trans              &trans        &trans
    >;
};
    };
};
